<%- include('partials/header', { title: "Login | Connie’s Trinkets", loggedIn: false }) %>

<section class="login-section">
  <div class="account-card" style="max-width:420px;margin:0 auto;">
    <h2>Login</h2>

    <% if (error) { %>
      <p class="login-message"><%= error %></p>
    <% } %>

    <form action="/login" method="post" class="manager-form">
      <div class="form-group">
        <input
          type="text"
          id="username"
          name="username"
          placeholder="Username"
          required
        />
      </div>

      <div class="form-group">
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>

      <button type="submit" class="btn">Login</button>
    </form>

    <p class="register-text" style="margin-top:1rem;">
      Don’t have an account?
      <a href="/register" class="btn btn-secondary">Register</a>
    </p>
  </div>
</section>

<%- include('partials/footer') %>
