<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Market | Grandma’s Legacy</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header>
    <h1>Grandma’s Legacy Market</h1>
    <nav>
      <a href="/account">My Items</a>
    </nav>
  </header>

  <main class="market">
    <% items.forEach(item => { %>
      <div class="item">
        <h3><%= item.name %></h3>
        <p><%= item.desc %></p>

        <% if (!item.claimedBy) { %>
          <form method="POST" action="/claim/<%= item.id %>">
            <button class="claim-btn">Claim</button>
          </form>
        <% } else { %>
          <span class="claimed">Claimed by <%= item.claimedBy %></span>
        <% } %>
      </div>
    <% }) %>
  </main>
</body>
</html>