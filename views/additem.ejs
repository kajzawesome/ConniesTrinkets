<%- include('partials/header', { title: "Add Item | Connieâ€™s Trinkets", loggedIn: loggedIn }) %>

<section class="edit-item-page">
  <div class="form-card edit-card">

    <h2>Add New Item</h2>

    <% if (error) { %>
      <div class="error-box"><%= error %></div>
    <% } %>

    <form action="/item/add" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <label for="itemName">Item Name</label>
        <input
          type="text"
          id="itemName"
          name="itemName"
          required
        />
      </div>

      <div class="form-group">
        <label for="itemDesc">Description</label>
        <textarea
          id="itemDesc"
          name="itemDesc"
          rows="4"
          required
        ></textarea>
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        <select id="category" name="category" required>
          <option value="furniture">Furniture</option>
          <option value="jewelry">Jewelry</option>
          <option value="keepsakes">Keepsakes</option>
          <option value="books">Books & Letters</option>
        </select>
      </div>

      <div class="form-group">
        <label for="image">Upload Image</label>
        <input type="file" id="image" name="image" />
      </div>

      <button type="submit" class="btn btn-primary full-width">Add Item</button>

    </form>

    <a href="/market" class="btn btn-secondary full-width">Cancel</a>

  </div>
</section>

<%- include('partials/footer') %>